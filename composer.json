{
    "name": "twin/messenger",
    "type": "library",
    "description": "The unified messenger library",
    "license": "proprietary",
    "keywords": ["twin", "messenger"],
    "authors": [
        {
            "name": "Sergey Milimko",
            "email": "smilimko@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "friendsofphp/php-cs-fixer": "3.*",
        "vimeo/psalm": "4.*",
        "psalm/plugin-phpunit": "0.*"
    },
    "autoload": {
        "psr-4": {
            "Twin\\Messenger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Twin\\Messenger\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "check": [
            "@cs-check",
            "@psalm",
            "@test"
        ],
        "cs-check": "@php-cs-fixer fix --dry-run --diff",
        "cs-fix": "@php-cs-fixer fix",
        "php-cs-fixer": "php-cs-fixer --config=.php-cs-fixer.php --allow-risky=yes",
        "psalm": "psalm --config=psalm.xml --no-cache",
        "test": "XDEBUG_MODE=coverage phpunit"
    }
}
